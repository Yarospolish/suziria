{
  "name": "suziria/product-api",
  "description": "REST API for product management",
  "type": "project",
  "require": {
    "php": "^8.3",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.6",
    "ramsey/uuid": "^4.7",
    "php-di/php-di": "^7.0",
    "ext-pdo": "*",
    "ext-pdo_pgsql": "*",
    "vlucas/phpdotenv": "^5.6",
    "slim/http": "^1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-unit": "phpunit --testsuite unit",
    "test-integration": "phpunit --testsuite integration"
  }
}
